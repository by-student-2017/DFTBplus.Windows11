basis
* library Def2-SVP
end

dft
xc pbe0
maxiter 200
end

tddft
 nroots 10
 notriplet
 cis
 maxiter 200
 civecs
 grad
  root 1
 end
end

qmd
 nstep_nucl 50
 dt_nucl 0.5
 targ_temp 300.0
 thermostat none
 print_xyz 10
 com_step 100
 rand_seed 425216
 namd aimc
  nstates 5
  init_state 3
  dt_elec 0.01
  decoherence off
  clone_max 12
 end
end
task tddft qmd

